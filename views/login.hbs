<div class="container-fluid">
    <div class="hidden-xs col-sm-4">&nbsp;</div>
    <div class="col-xs-12 col-sm-4 light">
        <h3 class="text-center">{{title}}</h3>
        {{#if error }}
        <div class="alert alert-danger" role='alert'>{{error}}</div>
        {{/if}}
        <form action="/login" method="post">
            <div class="form-group">
                <label for="username">Όνομα μέλους</label>
                <input class="form-control" type="text" name="username" placeholder="Όνομα μέλους" autofocus />
            </div>
            <div class="form-group">
                <label for="password">Κωδικός πρόσβασης</label>
                <input class="form-control" type="password" name="password" placeholder="Κωδικός πρόσβασης" />
            </div>
            <div class="form-group">
                <div class="form-group">
                    <div class="text-center">
                        <input class="btn btn-primary" type="submit" value="Σύνδεση" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="hidden-xs col-sm-4">&nbsp;</div>
</div>